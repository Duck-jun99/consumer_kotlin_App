<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <EditText
                android:id="@+id/et_post_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="password"/>

            <Button
                android:id="@+id/btn_dbdatalist_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="데이터 리스트 열기"
                android:gravity="center"/>

            <Button
                android:id="@+id/btn_main_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="메인 화면으로"
                android:gravity="center"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/framelayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/dbdatalist_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.kotlinstudy.consumer_kotlin_app.dbDataFragment" />


    </FrameLayout>

